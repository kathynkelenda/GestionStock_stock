{% extends 'base.html.twig' %}

{% block title %}
    Connexion
{% endblock %}

{% block body %}

    <h2>Bienvenue sur votre site de gestion de stock</h2><br><br>

    <h4> Veuillez vous connecter </h4> <br>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{path('security.login')}}" method="post" class="text-center">

        <div class="form-group">
            <input placeholder="Adresse email..." required name="_username" type="email" id="username" class="form-control" >
        </div>

        <div class="form-group">
            <input placeholder="Mot de passe..." required name="_password" type="password" id="password" class="form-control">
        </div>

        <input type="hidden" name="_target_path" value="/product/list"/>

         <button type$="submit" class="btn btn-success">
            Connexion
        </button> <br><br>

    </form>

{% endblock %}
