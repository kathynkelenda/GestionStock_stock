{% extends 'base.html.twig' %}

{% block title %}
    Connexion
{% endblock %}

 

{% block body %}

    
    <h1>Connexion</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{path('security.login')}}" method="post">

        <div class="form-group">
            <input placeholder="Adresse email..." required name="_username" type="email" id="username" class="form-control" >
        </div>

        <div class="form-group">
            <input placeholder="Mot de passe..." required name="_password" type="password" id="password" class="form-control">
        </div>

        <input type="hidden" name="_target_path" value="/product/list"/>

         <button type$="submit" class="btn btn-success">
            Connexion
        </button> <br><br>

        <label> Si vous n'avez pas de compte, vous pouvez vous connecter en cliquant  
            <a href="{{path('security.inscription')}}"> <strong>ici </strong> </a>
        </label>


    </form>


{% endblock %}
