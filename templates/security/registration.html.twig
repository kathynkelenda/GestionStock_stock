{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1>Formulaire d'inscription</h1>

    {{form_start(form)}}

        
        {{form_row(form.username,{'label':'Nom ','attr':{'placeholder': ' Entre votre nom d\'utilisateur'}})}}
        {{form_row(form.email,{'label':'Email','attr':{'placeholder': "adam@gmail.com"}})}}
        {{form_row(form.password,{'label':'Mot de passe','attr':{'placeholder': "Créer votre mot de passe"}})}}
        {{form_row(form.confirmPassword,{'label':'Confirmer votre mot de passe','attr':{'placeholder': " Veuillez répéter votre mot de passe"}})}}
         {{form_row(form.roles,{'label':'Rôle','attr':{'placeholder': " Utilisateur/administrateur"}})}}
        {{form_row(form.To_have,{'label':'Statut','attr':{'placeholder': "Statut de l'utilisateur"}})}}
        {{form_row(form.To_occupy,{'label':'Fonction','attr':{'placeholder': "Fonction de l'utilisateur"}})}}

        <button type$="submit" class="btn btn-success">
            Inscription
        </button>
    {{form_end(form)}}





{% endblock %}