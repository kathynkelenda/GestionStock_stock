{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <a href="{{ path('user.list') }}"> <U>Retour à la liste des utilisateurs</U> </a><br><br>

    <h1>Formulaire d'inscription</h1>

    {{form_start(form)}}
  
        {{form_row(form.username,{'label':'Nom ','attr':{'placeholder': ' Entre votre nom de famille'}})}}
        {{form_row(form.prenom,{'label':'Prénom ','attr':{'placeholder': ' Entre votre prenom'}})}}
        {{form_row(form.email,{'label':'Email','attr':{'placeholder': "adam@gmail.com"}})}}
        {{form_row(form.password,{'label':'Mot de passe','attr':{'placeholder': "Créer votre mot de passe"}})}}
        {{form_row(form.confirmPassword,{'label':'Confirmer votre mot de passe','attr':{'placeholder': " Veuillez répéter votre mot de passe"}})}}
         {{form_row(form.roles,{'label':'Rôle'})}}
        
        {{form_row(form.To_occupy,{'label':'Fonction'})}}

        <button type$="submit" class="btn btn-success">
            Inscription
        </button>
    {{form_end(form)}}

{% endblock %}