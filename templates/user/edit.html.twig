{% extends 'base.html.twig' %}


{% block title %} 

        Modifier d'utilisateur

{% endblock %} 

{% block body  %} 

        
        <h1> Formulaire de modification des utilisateurs</h1> <br><br>

        <a href="{{ path('user.list') }}">Retour</a>

            
        {{form_start(form)}}

            {{form_row(form.username,{'label':'Nom','attr':{'placeholder': "Nom d'utilisateur"}})}}
            {{form_row(form.email,{'label':'Email','attr':{'placeholder': "Adresse email"}})}}
            {{form_row(form.To_have,{'label':'Nom','attr':{'placeholder': "Nom d'utilisateur"}})}}
            {{form_row(form.To_occupy,{'label':'Email','attr':{'placeholder': "Adresse email"}})}}
            
            <button type="submit" class="btn btn-success">

                <h4 onclick="return confirm('Voulez-vous confirmer la modification des informations de cet utilisateur?')">
                Enregistrer les modifications
                </h4>
        
                </button>

        

        {{form_end(form)}}

        
{% endblock %} 
