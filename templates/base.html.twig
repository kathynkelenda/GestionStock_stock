<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" conten="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link  rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css" />
    <!--<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous"> -->
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
              <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script> 
        {% endblock %}
    </head>

    <body> 

        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{path('product.list')}}">GestionStock</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">

                    <ul class="navbar-nav me-auto">


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Test/Gestion produit</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{path('product.list')}}">Tous les produits</a>
                                <a class="dropdown-item" href="{{path('product.new')}}">Créer un produit</a>
                                <a class="dropdown-item" href="#"></a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{path('nature.list')}}">Nature des produits</a>
                            </div>
                        </li>

                         <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Test/Gestion utilisateurs</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{path('user.list')}}">Tous les utilisateurs</a>
                                <a class="dropdown-item" href="{{path('security.inscription')}}">Créer un utilisateur</a>
                                <a class="dropdown-item" href="#"></a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href=""></a>
                            </div>
                        </li>
    
            {% if not app.user %}
                        <li class="nav-item" >
                            <a href="{{path('security.login')}}" class="nav-link"> Connexion</a>
                        </li>
            
            {% else %}
                    
                        <li class="nav-item">
                            <a href="{{path('security.logout')}}" class="nav-link"> Déconnexion</a>
                        </li>

            {% endif %}          

                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">

        {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que  <strong>{{ app.user.username }}</strong>
                
                </div>
            {% endif %}
            
        {% block body %}

            

      
        {% endblock %}
        </div>
    </body>

</html>
